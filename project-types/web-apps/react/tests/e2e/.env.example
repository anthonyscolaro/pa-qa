# PA-QA E2E Test Environment Configuration
# Copy this file to .env and update values for your environment

# Application Configuration
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Test Configuration
NODE_ENV=test
CI=false

# Authentication
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=TestPassword123!
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=AdminPassword123!

# Database (if using real database for testing)
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/test_db

# External Services
MOCK_EXTERNAL_APIS=true
EXTERNAL_API_KEY=your-test-api-key

# Browser Configuration
HEADLESS=true
SLOW_MO=0
TIMEOUT=30000

# Playwright Configuration
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=false

# Visual Testing
UPDATE_SNAPSHOTS=false
VISUAL_THRESHOLD=0.2

# Performance Testing
PERFORMANCE_BUDGET_LOAD_TIME=3000
PERFORMANCE_BUDGET_FCP=1500
PERFORMANCE_BUDGET_LCP=2500

# Accessibility Testing
ACCESSIBILITY_STANDARD=wcag2aa
ACCESSIBILITY_FAIL_ON_VIOLATIONS=true

# Reporting
ALLURE_SERVER_URL=https://allure.projectassistant.ai
PROJECT_NAME=react-e2e-tests
BUILD_ID=${GITHUB_RUN_ID:-local}
BRANCH_NAME=${GITHUB_REF_NAME:-main}

# Notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK
EMAIL_NOTIFICATIONS=false

# Network Simulation
SIMULATE_SLOW_NETWORK=false
NETWORK_SPEED=fast

# Mobile Testing
TEST_MOBILE_DEVICES=true
MOBILE_DEVICE_LIST=iPhone 12,Pixel 5,iPad Pro

# Debugging
DEBUG_MODE=false
SAVE_TRACES_ON_FAILURE=true
SAVE_VIDEOS_ON_FAILURE=true
SAVE_SCREENSHOTS_ON_FAILURE=true

# Parallel Execution
MAX_WORKERS=4
SHARD_INDEX=1
SHARD_TOTAL=1

# Test Data
USE_REAL_DATA=false
SEED_DATABASE=true
CLEANUP_DATA_AFTER_TESTS=true

# Security
DISABLE_HTTPS_CHECKS=false
BYPASS_CSP=false

# Docker Configuration
DOCKER_NETWORK=pa-qa-network
DOCKER_COMPOSE_FILE=docker-compose.test.yml

# Cloud Testing
BROWSERSTACK_USERNAME=your-username
BROWSERSTACK_ACCESS_KEY=your-access-key
SAUCE_USERNAME=your-username
SAUCE_ACCESS_KEY=your-access-key

# Monitoring
ENABLE_PERFORMANCE_MONITORING=true
COLLECT_RUNTIME_METRICS=true
MONITOR_MEMORY_USAGE=true

# Feature Flags
ENABLE_EXPERIMENTAL_FEATURES=false
TEST_FEATURE_FLAGS=true