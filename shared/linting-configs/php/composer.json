{
    "name": "pa-qa/php-quality-tools",
    "description": "PHP code quality and testing tools for PA-QA framework",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.10",
        "phpstan/phpstan": "^1.12",
        "friendsofphp/php-cs-fixer": "^3.40",
        "vimeo/psalm": "^5.25",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^1.2",
        "phpmd/phpmd": "^2.15",
        "sebastian/phpcpd": "^6.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "wp-coding-standards/wpcs": "^3.1",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^1.2",
        "phpstan/phpstan-strict-rules": "^1.6",
        "phpstan/phpstan-phpunit": "^1.4",
        "larastan/larastan": "^2.9",
        "psalm/plugin-laravel": "^2.11",
        "psalm/plugin-phpunit": "^0.19",
        "nunomaduro/phpinsights": "^2.11",
        "povils/phpmnd": "^3.5",
        "roave/security-advisories": "dev-latest",
        "captainhook/captainhook": "^5.21",
        "captainhook/plugin-composer": "^5.3"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "captainhook/plugin-composer": true
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "cs:check": "phpcs",
        "cs:fix-phpcs": "phpcbf",
        "stan": "phpstan analyse",
        "psalm": "psalm",
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html build/coverage",
        "test:coverage-text": "phpunit --coverage-text",
        "rector": "rector process --dry-run",
        "rector:fix": "rector process",
        "md": "phpmd src text phpmd.xml",
        "cpd": "phpcpd src",
        "insights": "phpinsights",
        "mnd": "phpmnd src",
        "security": "composer audit",
        "quality": [
            "@cs:check",
            "@stan",
            "@psalm",
            "@md",
            "@cpd",
            "@mnd"
        ],
        "quality:fix": [
            "@cs:fix",
            "@cs:fix-phpcs",
            "@rector:fix"
        ],
        "ci": [
            "@quality",
            "@test:coverage-text"
        ],
        "install-hooks": "vendor/bin/captainhook install",
        "pre-commit": [
            "@cs:check",
            "@stan",
            "@test"
        ]
    },
    "scripts-descriptions": {
        "cs": "Check code style with PHP-CS-Fixer (dry run)",
        "cs:fix": "Fix code style with PHP-CS-Fixer",
        "cs:check": "Check code style with PHP_CodeSniffer",
        "cs:fix-phpcs": "Fix code style with PHP_CodeSniffer",
        "stan": "Run PHPStan static analysis",
        "psalm": "Run Psalm type checking",
        "test": "Run PHPUnit tests",
        "test:coverage": "Run tests with HTML coverage report",
        "test:coverage-text": "Run tests with text coverage report",
        "rector": "Check for automated refactoring opportunities",
        "rector:fix": "Apply automated refactoring",
        "md": "Run PHP Mess Detector",
        "cpd": "Check for copy-paste detection",
        "insights": "Run PHP Insights analysis",
        "mnd": "Check for magic numbers",
        "security": "Check for security vulnerabilities",
        "quality": "Run all quality checks",
        "quality:fix": "Fix all automatically fixable issues",
        "ci": "Run CI pipeline checks",
        "install-hooks": "Install Git hooks",
        "pre-commit": "Run pre-commit quality checks"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}