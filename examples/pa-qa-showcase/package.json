{
  "name": "pa-qa-showcase",
  "version": "1.0.0",
  "description": "PA-QA Testing Showcase - Next.js 15 with App Router and MDX",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:a11y": "playwright test tests/accessibility",
    "test:performance": "playwright test tests/performance",
    "test:visual": "playwright test tests/visual",
    "test:all": "npm run test:unit && npm run test:e2e && npm run test:a11y",
    "test:ci": "npm run test:coverage && npm run test:e2e && npm run test:a11y && npm run test:performance",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "analyze": "cross-env ANALYZE=true next build",
    "build:check": "next build --debug",
    "mdx:validate": "next build --debug 2>&1 | grep -i 'error\\|failed' && exit 1 || echo 'MDX validation passed'",
    "docs:sync": "node scripts/sync-docs.js",
    "clean": "rm -rf .next out dist coverage test-results playwright-report allure-results allure-report"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@monaco-editor/react": "^4.7.0",
    "@next/mdx": "^15.1.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.427.0",
    "monaco-editor": "^0.53.0",
    "next": "^15.1.0",
    "next-themes": "^0.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-syntax-highlighter": "^15.6.6",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@faker-js/faker": "^8.4.1",
    "@next/bundle-analyzer": "^14.2.5",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20.14.12",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "allure-playwright": "^2.15.1",
    "allure-vitest": "^2.15.1",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.9.1",
    "axe-playwright": "^2.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^24.1.1",
    "msw": "^2.3.4",
    "pixelmatch": "^5.3.0",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "sharp": "^0.33.4",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
